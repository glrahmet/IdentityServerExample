@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}


<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img src="~/UserPicture/@Model.PictureUrl" style="width:100%; height:100%" />
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <td>Kullanıcı ismi</td>
                <td>@Model.UserName</td>
            </tr>

            <tr>
                <td>Kullanıcı Email</td>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <td>Telefon No</td>
                <td>@Model.PhoneNumber</td>
            </tr>

            <tr>
                <td>İl</td>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                        <span>Belirtilmemiş</span>
                    }

                </td>
            </tr>

            <tr>
                <td>Doğum Tarihi</td>
                <td>


                    @if (@Model.BirthDay != null)
                    {
                        @Model.BirthDay?.ToShortDateString()
                    }
                    else
                    {
                        <span>Belirtilmemiş</span>
                    } 
                </td>
            </tr>

            <tr>
                <td>Cinsiyeti</td>
                <td>
                    @Model.Gender
            </td>
        </tr>

    </table>

</div>

</div>