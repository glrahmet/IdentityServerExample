@model IList<RoleAssignViewModel>
@{
    ViewData["Title"] = "Kullanıcı Rol Atama";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>@ViewBag.UserName kullanıcısına rol atama işlemi</h2>



<form asp-controller="Admin" asp-action="RolAssign" method="post">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].Exits" type="checkbox" class="form-check-input" />
            <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>

            <input asp-for="@Model[i].RoleName" type="hidden" />
            <input asp-for="@Model[i].RoleId" type="hidden" />
        </div>
    }
    <input class="btn btn-success" type="submit" value="Rol Ata" />
</form>

