@model IdentityServerExample.ViewModels.PasswordRestViewModel

@{
    ViewData["Title"] = "Yeni Şifre Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Status == "success")
{
    <div class="alert alert-info">Şifre yenileme işleminiz gerçekleştirilmiştir. Login sayfasından giriş yapabilirsiniz</div>
}
else
{
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}


